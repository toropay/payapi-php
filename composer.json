{
    "name": "toropay/payapi-php",
    "type": "library",
    "description": "Toro Pay API client in PHP.",
    "homepage": "https://github.com/toropay/payapi-php",
    "license": "MIT",
    "keywords": ["payment", "toropay"],
    "authors": [
        {
            "name": "Ishmael Doss",
            "email": "nukboon@gmail.com",
            "homepage": "https://github.com/liverbool"
        }
    ],
    "prefer-stable": true,
    "require": {
        "php": "^7.1",
        "doctrine/collections": "^1.5",
        "doctrine/inflector": "^1.2",
        "psr/http-message": "^1.0",
        "php-http/client-implementation": "^1.0",
        "php-http/httplug": "^1.0",
        "php-http/discovery": "^1.0",
        "league/oauth2-client": "^2.2",
        "symfony/options-resolver": "^3.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "sylius/user": "^1.0",
        "symfony/security": "^3.4",
        "symfony/var-dumper": "^3.4",
        "php-http/guzzle6-adapter": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Toro\\Pay\\": "src/",
            "Tests\\Toro\\Pay\\": "tests/"
        }
    },
    "autoload-dev": {
        "files": [ "src/dump.php" ]
    },
    "config": {
        "bin-dir": "bin",
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
